@model StudentManagementSystem_MVC_Finale.Models.Course

@{
    ViewData["Title"] = "GetCourseList";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}





<div class="main-panel">
    <div class="content-wrapper" >
        <div class="row">
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body" style="margin:auto">
@*                        <h4 class="card-title" style="text-decoration: underline; margin: auto">List Of Available Courses</h4>
*@                        
                        <div class="row">
                            <div class="col-md-12" >
                                <form asp-action="GetCourseList" asp-route-id="Id">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-group" align="center">
                                        <label asp-for="Id" class="control-label" style="width:500px"><h4 >Courses</h4></label>
                                        <select asp-for="Id" class="form-control" asp-items="ViewBag.Id"></select>
                                        <span asp-validation-for="Id" class="text-danger" style="color:black"></span>
                                    </div>

                                    <div class="form-group" align="center">
                                        <input type="submit" value="Student Details" asp-action="getstudentbycourseid"  asp-controller="admin" class="btn btn-primary" />
                                    </div>
                                </form>
                            </div>
                        </div>

                        
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
